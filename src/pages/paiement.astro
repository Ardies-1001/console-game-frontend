---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Commande">
    <main class="main">
        <section class="section buy grid" >
  
          <span class="sub-title">CITATIONS DANS VOTRE EMAIL</span>
            <h2 class="section-title">Achetez <span class="section-span">Plus</span></h2>
           <div class="contact-container">
  
              <div class="content-descrition">
                <h3 class="delaySmallBottom">Commande</h3>
  
                <div class="sub-content">                  
                  <div class="button-buy delayMediumBottom" >
                    <div class="card-button">
                    <h4>Manette PS4</h4>
                    <span>200€</span>
                    </div>
    
                       <div class="card-buy">
                         <div class="buy-data-content" >
                           <h5>Manette PS4</h5>
                           <div class="estrela estrela-buy">
                             <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                             <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                             <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                             <p>(15)</p>
                            </div>
                           <p class="description-card">La meilleure manette de jeu</p>
                         </div>
    
                         <div class="content-img">
                           <div class="border-buy"></div>
                           <img class="img-buy" src="/images/Controller-2.png" alt="manette du PlayStation 4 en blanc">
                         </div>
                       </div>
    
                   </div> 
  
                  <div class="button-buy delayLargeBottom">
                    <div class="card-button">
                     <h4>Manette PS5</h4>
                     <span>400€</span>
                    </div>
  
                     <div class="card-buy">
                       <div class="buy-data-content">
                         <h5>Manette PS5</h5>
                         <div class="estrela estrela-buy">
                           <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                           <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                           <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                           <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                           <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                           <p>(30)</p>
                          </div>
                         <p class="description-card">La meilleure manette de jeu</p>
                       </div>
  
                       <div class="content-img">
                         <div class="border-buy"></div>
                         <img class="img-buy-1" src="/images/Controller-1.png" alt="manette du PlayStation 4 en blanc">
                       </div>
                     </div>
  
                  </div>
  
                  <div class="button-buy delayLargeBottomExtra">
                    <div class="card-button">
                      <h4>Manette Squid</h4>
                      <span>550€</span>
                     </div>
      
                         <div class="card-buy">
                           <div class="buy-data-content">
                             <h5>Manette Squid</h5>
                             <div class="estrela estrela-buy">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <img src="/images/estrela.png" alt="étoile jaune d'évaluation">
                               <p>(43)</p>
                              </div>
                             <p class="description-card">La meilleure manette de jeu</p>
                           </div>
      
                           <div class="content-img">
                             <div class="border-buy"></div>
                             <img class="img-buy-1" src="/images/Controller-3.png" alt="manette du PlayStation 4 en blanc">
                           </div>
                         </div>
      
                  </div> 
  
                </div>
              </div>
  
              <div class="container-form">
                <h3 class="form-title-buy delaySmall">1. Données personnelles</h3>
               
                <form action="" method="POST">
                  

                  <div class="form-small">
                    <div class="content-form form-left">
                     <label for="name">Prénom</label>
                     <input type="text" id="name-buy" class="small" required placeholder="  Votre nom">
                    </div>
                    <div class="content-form form-right">
                     <label for="name">Nom</label>
                     <input type="text" id="name-buy" class="small" required placeholder="  Votre nom">
                    </div>
                  </div>

                  <div class="content-form delayMedium">
                    <label for="number">CPF</label>
                     <input type="number" id="number" class="large" required placeholder="  123.456.789.01">
                   </div>
                   <div class="content-form delayLarge">
                    <label for="email">Email</label>
                     <input type="email" id="email-buy" class="large" required placeholder="  votre@email.com">
                   </div>

                   <h3 class="form-title-buy delayLargeTopExtra">2. Méthode de livraison</h3>

                   <div class="form-small">
                   <div class="content-form form-left">
                    <label for="number">Code postal</label>
                     <input type="number" id="number" class="small" required placeholder="  12.345-162">
                   </div>
                   <div class="content-form form-right">
                    <label for="number">Numéro</label>
                     <input type="number" id="number" class="small" required>
                   </div>
                  </div>

                  <div class="form-small">
                   <div class="content-form form-right">
                    <label for="text">Lieu public</label>
                     <input type="text" id="text" class="small" required>
                   </div>
                   <div class="content-form form-left">
                    <label for="text">Quartier</label>
                     <input type="text" id="text" class="small" required>
                   </div>
                  </div>

                  <div class="form-small">
                   <div class="content-form form-left">
                    <label for="text">Ville</label>
                     <input type="text" id="text" class="small" required>
                   </div>
                   <div class="content-form form-right">
                    <label for="text">État</label>
                     <input type="text" id="text" class="small" required>
                   </div>
                  </div>

                  <div class="content-form">
                    <button class="button-form delayLargeBottomExtra" type="submit">Passer commande</button>
                  </div>
                </form>
              </div>

          </div>
        </section>
      </main>
</Layout>