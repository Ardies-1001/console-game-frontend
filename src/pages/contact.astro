---
import Layout from "../layouts/Layout.astro"

// const email = import.meta.env.PUBLIC_ANYBODY
import { email, adresse, numero } from "../constantes/constante.astro"

---


<Layout title="Contact">
    <main class="main">
        <section class="section contact grid" >
  
          <span class="sub-title sub-contact">RÉPONSES DANS LES 24H</span>
            <h2 class="section-title title-contact">Contact <span class="section-span">Nous</span></h2>
          <div class="contact-container">
  
              <div class="content-descrition">
                <h3 class="delaySmall">Prenez contact</h3>
                <p class="sub-description delayMedium">Nous aimerions entendre de vous. Notre équipe amicale <br> est toujours là pour discuter.</p>
  
                <div class="sub-content">
                  <h4 class="contact-title"> <i class="uil uil-envelope-add contact-button"></i> Discutez avec nous</h4>
                  <p class="delaySmallBottom">Notre équipe amicale est là pour vous aider.</p>
                  <a class="contact-link delayLargeBottom" href="mailto:{email}">{email}</a>
                </div>
  
                <div class="sub-content">
                  <h4 class="contact-title"> <i class="uil uil-location-point contact-button"></i> Bureau</h4>
                  <p class="delaySmallBottom">Venez nous rendre visite au siège social.</p>
                  <span class="contact-link delayLargeBottom">{adresse}</span>
                </div>
  
                <div class="sub-content">
                  <h4 class="contact-title"> <i class="uil uil-phone-alt contact-button"></i> Discutez avec nous</h4>
                  <p class="delaySmallBottom">Du lundi au vendredi de 8h à 17h.</p>
                  <a class="contact-link delayLargeBottom" href="tel:{numero}">{numero}</a>
                </div>
                
                <div class="contact-social">
                  <a href="https://github.com/EvanderInacio"><i class="uil uil-github delaySmall"></i></a> 
                  <a href="#"><i class="uil uil-instagram delayMedium"></i></a>
                  <a href="https://www.linkedin.com/in/evander-inacio/"><i class="uil uil-linkedin-alt delayLarge"></i></a>
                </div>
  
              </div>
              <div class="container-form">
                <h3 class="form-title delayMedium">Faites monter votre marque</h3>
                <p class="form-description delayMediumBottom">Vous pouvez nous rejoindre à tout moment via <span class="section-span" style="color: white !important;">{email}</span></p>
  
                <form action="https://formsubmit.co/evander.corinthiano@hotmail.com" method="POST">
                  <input type="hidden" name="_captcha" value="false">
                  <input type="hidden" name="_next" value="https://playstation-4.vercel.app/assets/html/envoi.html">
  
                  <div class="content-form delayMedium">
                    <label for="name">Nom</label>
                    <input type="text" id="name" required placeholder="Votre nom">
                  </div>
                  <div class="content-form delayLarge">
                   <label for="tel">Telephone</label>
                    <input type="tel" id="tel" required placeholder="Votre numéro de télephone">
                  </div>
                  <div class="content-form delayLarge">
                   <label for="email">Email</label>
                    <input type="email" id="email" required placeholder="votre@email.com">
                  </div>
                  <div class="content-form delayLargeTopExtra">
                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="30" rows="5" placeholder="  Qu'est-ce que vous avez besoin ?"></textarea>
                  </div>
                  <div class="content-form">
                    <button class="button-form delayLargeTopExtra" type="submit">Envoyer le message</button>
                  </div>
                </form>
              </div>
   
          </div>
        </section>
      </main>
</Layout>